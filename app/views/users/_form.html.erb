<div class="container mt-4">
    <div class="container row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors",obj: @user %>
            <%= form_with(model: @user, class: "shadow-lg p-3 mb-3 bg-info rounded",local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :username,class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :username ,class: "form-control shadow rounded",placeholder: "Enter a username"%>
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label :email,class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.email_field :email ,rows: 10,class: "form-control shadow rounded",placeholder: "Enter your email"%>
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label :password,class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.password_field :password ,rows: 10,class: "form-control shadow rounded",placeholder: "Chose a password"%>
                    </div>
                </div>
                <div class="form-group text-center">
                    <%=f.submit "SignUp",class: "btn btn-outline-light btn-lg"%>
                </div>
            <%end%>
        </div>
        <%= link_to "[Return]",articles_path,class: "text-center text-info"%>
    </div>
</div>