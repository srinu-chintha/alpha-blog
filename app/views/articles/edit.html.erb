<h1>create a edit article</h1>
<% if @article.errors.any? %>
    <h1>The following errors prevented the article to save</h1>
    <ul>
        <% @article.errors.full_messages.each do |mesg| %>
            <li><%= mesg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @article,local: true) do |f| %>
    <p>
    <%= f.label :title%></br>
    <%= f.text_field :title%>
    </p>
    <p>
    <%= f.label :description%></br>
    <%= f.text_area :description%>
    </p>
    <p>
    <%=f.submit%>
    </p>
<%end%>
<%= link_to "delete",article_path(@article),method: :delete,data: {confirm: "are you sure?"} %> |
<%= link_to "Return",articles_path%>