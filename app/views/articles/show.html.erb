<h2 class="text-center mt-4"><%= @article.title%></h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-8 mt-3">
            <div class="card text-center shadow-lg">
                <div class="card-header font-italic">
                    <%= @article.user.username if @article.user%>
                    <%= link_to gravator_for(@article.user,options={size: 100}) ,user_path(@article.user.id)%>
                </div>
                <div class="card-body">
                    <div class="card-text text-left"><%= simple_format(@article.description) %></div>
                    <%= link_to "Edit" , edit_article_path(@article), class: "btn btn-outline-success"%>
                    <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger",method: :DELETE, data: {confirm: "Are you sure?"} %>
                </div>
                <div class="card-footer text-muted">
                    <small>
                    created <%= time_ago_in_words(@article.created_at)%> ago
                    updated <%= time_ago_in_words(@article.updated_at)%> ago
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
</br>
