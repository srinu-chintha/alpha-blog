<h1>create a new article</h1>
<% if @article.errors.any? %>
    <h1>The following errors prevented the article to save</h1>
    <ul>
        <% @article.errors.full_messages.each do |mesg| %>
            <li><%= mesg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with scope: :article,method: :post,url: articles_path,local: true do |f| %>
    <p>
    <%= f.label :title%></br>
    <%= f.text_field :title%>
    </p>
    <p>
    <%= f.label :description%></br>
    <%= f.text_area :description%>
    </p>
    <p>
    <%=f.submit%>
    </p>
<%end%>
<%= link_to "Return",articles_path%>